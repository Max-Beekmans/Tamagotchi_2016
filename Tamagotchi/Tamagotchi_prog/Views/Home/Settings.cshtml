    ViewBag.Title = "Settings";
}

<h2>Settings</h2>

@using (Html.BeginForm("SetSettings", "Home"))
{
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Boredom)
    </dt>

    <dd>
        @Html.CheckBoxFor(m => m.Boredom)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Fatigue)
    </dt>

    <dd>
        @Html.CheckBoxFor(m => m.Fatigue)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Hunger)
    </dt>

    <dd>
        @Html.CheckBoxFor(m => m.Hunger)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Isolation)
    </dt>

    <dd>
